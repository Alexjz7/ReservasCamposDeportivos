@model WebCamposDeportivos_V1._2.Models.Canchas

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Campo</h1>

<h3>Realmente desea eliminar este campo?</h3>
<div>
    <h4>Canchas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Empresa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empresa.nombre)
        </dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            Deporte
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deporte.nombre)
        </dd>
        <dt class="col-sm-2">
            Detalle
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.detalle)
        </dd>
        <dt class="col-sm-2">
            Hora de Apertura
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.horaApertura)
        </dd>
        <dt class="col-sm-2">
            Hora de Cierre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.horaCierre)
        </dd>
        <dt class="col-sm-2">
            Costo por Hora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.costoPorHora)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado.Descripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_cancha" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
