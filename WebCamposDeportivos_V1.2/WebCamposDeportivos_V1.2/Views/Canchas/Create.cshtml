@model WebCamposDeportivos_V1._2.Models.Canchas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Campos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_empresa" class="control-label">Empresa</label>
                <select asp-for="id_empresa" class ="form-control" asp-items="ViewBag.id_empresa"></select>
            </div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input asp-for="nombre" type="text" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_deporte" class="control-label">Deporte</label>
                <select asp-for="id_deporte" class ="form-control" asp-items="ViewBag.id_deporte"></select>
            </div>
            <div class="form-group">
                <label asp-for="detalle" class="control-label">Detalle</label>
                <textarea asp-for="detalle" class="form-control"></textarea>
                <span asp-validation-for="detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaApertura" class="control-label">Hora de Apertura</label>
                <input asp-for="horaApertura" type="time" class="form-control" />
                <span asp-validation-for="horaApertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaCierre" class="control-label">Hora de Cierre</label>
                <input asp-for="horaCierre" type="time" class="form-control" />
                <span asp-validation-for="horaCierre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoPorHora" class="control-label">Costo por Hora</label>
                <input asp-for="costoPorHora" type="number" value="5.0" step="0.1" class="form-control" />
                <span asp-validation-for="costoPorHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="id_estadoCancha" class ="form-control" hidden="hidden" asp-items="ViewBag.id_estadoCancha"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
