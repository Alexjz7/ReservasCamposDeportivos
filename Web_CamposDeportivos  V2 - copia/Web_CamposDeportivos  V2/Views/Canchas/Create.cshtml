@model Web_CamposDeportivos__V2.Models.Canchas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nueva Cancha</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_gerente" class="control-label"></label>
                <input asp-for="id_gerente" class="form-control" />
                <span asp-validation-for="id_gerente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deporte" class="control-label"></label>
                <input asp-for="deporte" class="form-control" />
                <span asp-validation-for="deporte" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="disponible" /> @Html.DisplayNameFor(model => model.disponible)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="reservada" /> @Html.DisplayNameFor(model => model.reservada)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
