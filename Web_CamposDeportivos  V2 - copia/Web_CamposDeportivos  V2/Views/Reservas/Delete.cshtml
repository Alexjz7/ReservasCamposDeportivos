@model Web_CamposDeportivos__V2.Models.Reservas

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Reserva</h1>

<h3>Realmente desea eliminar esta reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id_cancha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_cancha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id_cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_cliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fechaReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaReserva)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_reserva" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
