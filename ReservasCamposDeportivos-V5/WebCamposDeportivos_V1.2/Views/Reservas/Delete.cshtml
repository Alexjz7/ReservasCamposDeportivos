@model WebCamposDeportivos_V1._2.Models.Reservas
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<h3>¿Estás seguro de que deseas eliminar esto?</h3>

<div>
    <h4>Reservas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.fechaReserva)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.fechaReserva)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.horaReserva)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.horaReserva)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.total)</dt>
        <dd class="col-sm-10">@* @Html.DisplayFor(model => model.Cancha.costoPorHora) *@</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.estado)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.estado)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cliente)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cliente.nombres)</dd>

        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Pago) *@
            Nuevo código
        </dt>
        <dd class="col-sm-10">
            @* @Html.DisplayFor(model => model.Pago.Descripcion) *@
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id_reserva" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
