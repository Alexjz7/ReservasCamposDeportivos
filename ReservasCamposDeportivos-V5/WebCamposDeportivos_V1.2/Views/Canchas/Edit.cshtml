@model WebCamposDeportivos_V1._2.Models.Canchas

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Canchas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_cancha" />
            <div class="form-group">
                <label asp-for="id_empresa" class="control-label"></label>
                <select asp-for="id_empresa" class="form-control" asp-items="ViewBag.id_empresa"></select>
                <span asp-validation-for="id_empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text">Cancha de</span>
                    <select asp-for="deporte" class="form-control">
                        <option value="" disabled selected>Seleccione un deporte...</option>
                        <option value="fútbol">Football</option>
                        <option value="basket">Basketball</option>
                        <option value="voley">Volleyball</option>
                        <option value="tennis">Tennis</option>
                        <option value="fronton">Frontón</option>
                    </select>
                </div>
                <span asp-validation-for="deporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="detalle" class="control-label"></label>
                <input asp-for="detalle" class="form-control" />
                <span asp-validation-for="detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoDia" class="control-label"></label>
                <input asp-for="costoDia" class="form-control" />
                <span asp-validation-for="costoDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoNoche" class="control-label"></label>
                <input asp-for="costoNoche" class="form-control" />
                <span asp-validation-for="costoNoche" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImage" class="control-label"></label>
                <input asp-for="UrlImage" class="form-control" />
                <span asp-validation-for="UrlImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
