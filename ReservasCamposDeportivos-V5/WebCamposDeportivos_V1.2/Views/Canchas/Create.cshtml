@model WebCamposDeportivos_V1._2.Models.Canchas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Campos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_empresa" class="control-label">Empresa</label>
                <select asp-for="id_empresa" class="form-control" asp-items="ViewBag.id_empresa"></select>
                <span asp-validation-for="id_empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text">Cancha de</span>
                    <select asp-for="deporte" class="form-control">
                        <option value="" disabled selected>Seleccione un deporte...</option>
                        <option value="fútbol">Football</option>
                        <option value="basket">Basketball</option>
                        <option value="voley">Volleyball</option>
                        <option value="tennis">Tennis</option>
                        <option value="fronton">Frontón</option>
                    </select>
                </div>
                <span asp-validation-for="deporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="detalle" class="control-label">Detalle</label>
                <textarea asp-for="detalle" class="form-control"></textarea>
                <span asp-validation-for="detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoDia" class="control-label">Costo por Día</label>
                <div class="input-group">
                    <span class="input-group-text">S/.</span>
                    <input asp-for="costoDia" type="number" value="5.0" step="0.1" class="form-control" />
                </div>
                <span asp-validation-for="costoDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoNoche" class="control-label">Costo por Noche</label>
                <div class="input-group">
                    <span class="input-group-text">S/.</span>
                    <input asp-for="costoNoche" type="number" value="5.0" step="0.1" class="form-control" />
                </div>
                <span asp-validation-for="costoNoche" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImage" class="control-label">Imagen URL</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon3">https://example.com/users/</span>
                    <input asp-for="UrlImage" class="form-control" />
                </div>
                <span asp-validation-for="UrlImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i>
        Volver
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}