@model WebCamposDeportivos_V1._2.Models.Empresas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Empresas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
@*             <div class="form-group">
                <label class="control-label">Seleccionar admin</label>
                <input class="form-control" name ="admin" value="@ViewBag.admin"/>
            </div> *@
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="celular" class="control-label"></label>
                <input asp-for="celular" class="form-control" />
                <span asp-validation-for="celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaApertura" class="control-label"></label>
                <input asp-for="horaApertura" type="time" max="22:00" min="06:00" step="0:30" class="form-control" />
                <span asp-validation-for="horaApertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaCierre" class="control-label"></label>
                <input asp-for="horaCierre" type="time" max="22:00" min="06:00" step="0:30" class="form-control" />
                <span asp-validation-for="horaCierre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i>
        Volver
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
