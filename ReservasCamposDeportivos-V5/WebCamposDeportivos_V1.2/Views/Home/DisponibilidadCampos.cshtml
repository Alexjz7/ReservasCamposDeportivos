@model List<WebCamposDeportivos_V1._2.Models.Canchas>

@{
    ViewData["Title"] = "DisponibilidadCampos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Campos Deportivos</h1>
<div class="row">
    <div class="col-4">
        <form method="get" id="searchForm">
            <div class="form-group">
                <label for="searchCamp">Por hora de inicio:</label>
                <input type="time" class="form-control" name="horaInicio" value="@ViewData["horaInicio"]">
            </div>
            <div class="form-group">
                <label for="searchCamp">Y hora final:</label>
                <input type="time" class="form-control" name="horaFinal" value="@ViewData["horaFinal"]">
            </div>
            <button type="submit" class="btn btn-outline-primary">Buscar</button>
        </form>
    </div>
</div>
<div class="row">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="@item.UrlImage" alt="Imagen del campo deportivo" class="card-img-top" />
                    <div class="card-body">
                        <h5>@item.Empresa.nombre</h5>
                        <div>
                            <span class="btn btn-outline-info btn-sm">@item.deporte</span>
                        </div>
                        <br>
                        <p>
                            <span class="text-secondary">Ubicación:</span>
                        </p>
                        <p>Precio de día:</p>
                        <div class="btn-group-lg">
                            <h3>S/. @item.costoDia</h3>
                        </div>
                        <p>Precio de noche:</p>
                        <div class="btn-group-lg">
                            <h3>S/. @item.costoNoche</h3>
                            <a asp-action="Details" asp-controller="Canchas" asp-route-id="@item.id_cancha" class="btn btn-info">
                                <i class="fa-solid fa-eye"></i>
                                Más información
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="alert alert-info">Lo sentimos, en este momento no tenemos campos para mostrar :c</p>
    }
</div>

